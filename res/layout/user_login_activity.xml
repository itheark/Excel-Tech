<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/LinearLayout1"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    
    android:orientation="vertical" >


<ScrollView 
    android:id="@+id/scrollview"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
     android:orientation="vertical" 
     android:fillViewport="true"
     >

<RelativeLayout 
    android:id="@+id/LinearLayout1"
    android:layout_width="match_parent"
    android:layout_height="fill_parent"
     android:orientation="vertical" >
    
     <ImageView
        android:id="@+id/imageView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        
        android:layout_centerHorizontal="true"
        android:src="@drawable/tregister"
        android:paddingTop="14dp" />

    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="43dp"
        android:orientation="vertical" >

        <EditText
            android:id="@+id/registration_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:ems="10"
            android:fontFamily="sans-serif"
            android:hint="first name"
            android:inputType="textPersonName"
            android:textColor="#FFFFFF"
            android:textColorHint="#95FFFFFF" />
         <EditText
            android:id="@+id/registration_lastname"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:fontFamily="sans-serif"
            android:hint="last name"
            android:inputType="textPersonName"
            android:textColor="#FFFFFF"
            android:textColorHint="#95FFFFFF" />
      
         

        <EditText
            android:id="@+id/registration_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:fontFamily="sans-serif"
            android:hint="password"
            android:inputType="textPassword"
            android:textColor="#FFFFFF"
            android:textColorHint="#95FFFFFF"
            >
        </EditText>

        <EditText
            android:id="@+id/registration_email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="email"
            android:inputType="textEmailAddress"
            android:textColor="#FFFFFF"
            android:textColorHint="#95FFFFFF"
             />

        <AutoCompleteTextView
            android:id="@+id/registration_college"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="college"
            android:inputType="textPersonName"
            android:textColor="#FFFFFF"
            android:textColorHint="#95FFFFFF"
             />
        <AutoCompleteTextView
            android:id="@+id/registration_collegedept"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="department"
            android:inputType="textPersonName"
            android:textColor="#FFFFFF"
            android:textColorHint="#95FFFFFF"
             />

      

        <EditText
            android:id="@+id/registration_phone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="phone"
            android:inputType="phone"
            android:textColor="#FFFFFF"
            android:textColorHint="#95FFFFFF"
            />
        <AutoCompleteTextView
            android:id="@+id/registration_accomodate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="accomodation"
            android:inputType="textPersonName"
            android:textColor="#FFFFFF"
            android:textColorHint="#95FFFFFF"
             />


    </LinearLayout>

    <TextView
        android:id="@+id/clickhere"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/fbconnect"
        android:layout_marginTop="40dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="20dp"
        android:fontFamily="sans-serif"
        
        android:text="@string/clickhere"
        android:textColor="#FFFFFF"
        android:textStyle="normal" />

    <ImageView
        android:id="@+id/signup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/linearLayout2"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="18dp"
        android:src="@drawable/signup" 
        android:clickable="true"/>

    <ImageView
        android:id="@+id/fbconnect"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/signup"
        android:layout_marginTop="80dp"
        android:layout_centerHorizontal="true"
        android:src="@drawable/fbconnect"
        android:clickable="true"
         />

    <com.greycodes.excel14.login.CircularImageView
        android:id="@+id/propic"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_alignTop="@+id/linearLayout2"
        android:layout_marginLeft="34dp"
        android:layout_toRightOf="@+id/linearLayout2" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/signup"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="39dp"
        android:src="@drawable/lazy" />

</RelativeLayout>
</ScrollView>
</RelativeLayout>